{% extends 'base.html.twig' %}

{% block title %}Modifier {{ event.name }}{% endblock %}

{% block body %}
    <div class="container">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="{{ path('app_home') }}">Accueil</a></li>
                <li class="breadcrumb-item"><a href="{{ path('app_event_index') }}">Événements</a></li>
                <li class="breadcrumb-item"><a href="{{ path('app_event_show', {'id': event.id}) }}">{{ event.name }}</a></li>
                <li class="breadcrumb-item active" aria-current="page">Modifier</li>
            </ol>
        </nav>

        <div class="card">
            <div class="card-header">
                <h1>Modifier l'événement</h1>
            </div>
            <div class="card-body">
                {{ include('event/_form.html.twig', {'button_label': 'Mettre à jour'}) }}
            </div>
        </div>

        <div class="mt-3">
            {{ include('event/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}
