{% extends 'base.html.twig' %}

{% block title %}Changer mon mot de passe{% endblock %}

{% block body %}
    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header">
                        <h3 class="mb-0">Changer mon mot de passe</h3>
                    </div>
                    <div class="card-body">
                        {{ form_start(form) }}
                        {{ form_row(form.currentPassword) }}
                        {{ form_row(form.plainPassword) }}

                        <div class="d-flex justify-content-between mt-4">
                            <a href="{{ path('app_profile_index') }}" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Retour
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-key"></i> Changer mon mot de passe
                            </button>
                        </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
